{
  "manifest_version": 2,

  "name": "HeadsUpFuckOff",
  "description": "Movie reminders",
  "version": "1.0",

  // "browser_action": {
  //   "default_icon": "icon.png",
  //   "default_popup": "popup.html"
  // },
  "content_scripts": [
  {
    "matches": [
    "http://*/*",
    "https://*/*"
    ],
    "css": ["styles.css"],
    "js": ["jquery-2.1.4.min.js", "script.js"],
    "run_at": "document_end",
    "all_frames": false
  }
  ],
  "permissions": [
  "storage",
  "activeTab",
  "https://ajax.googleapis.com/"
  ]
}